<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sport_player_view_tree" model="ir.ui.view">
        <field name="name">sport_player.view.tree</field>
        <field name="model">sport.player</field>
        <field name="arch" type="xml">
            <tree string="Players">
                <field name="name" />
                <field name="age" />
                <field name="position" />
                <field name="team_id" />
                <field name="starter" widget="boolean_toggle" />
            </tree>
        </field>
    </record>

    <record id="sport_player_view_form" model="ir.ui.view">
        <field name="name">sport_player.view.form</field>
        <field name="model">sport.player</field>
        <field name="arch" type="xml">
            <form string="Player">
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="birth_date" />
                            <field name="age" />
                            <field name="position" />
                        </group>
                        <group>
                            <field name="team_id" />
                            <field name="sport_name" />
                            <field name="starter" widget="boolean_toggle" />
                        </group>
                        
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sport_player_action" model="ir.actions.act_window">
        <field name="name">Sport Player</field>
        <field name="res_model">sport.player</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new sport player
            </p>
        </field>
    </record>
</odoo>