<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista tree -->
    <record id="sport_team_view_tree" model="ir.ui.view">
        <field name="name">sport_team.view.tree</field>
        <field name="model">sport.team</field>
        <field name="arch" type="xml">
            <tree string="Team">
                <field name="name" />
                <field name="sport_id" />
            </tree>
        </field>
    </record>

    <!-- Vista Kanban -->
    <record id="sport_team_view_form" model="ir.ui.view">
        <field name="name">sport_team.view.form</field>
        <field name="model">sport.team</field>
        <field name="arch" type="xml">
            <form string="Team">
                <header>
                    <button string="Mark players starters" name="action_make_all_starters" type="object" class="btn-success"/>
                    <button string="Mark players substitutes" name="action_make_all_substitutes" type="object" class="btn-danger"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button type="object" name="action_view_players" class="oe_stat_button" icon="fa-users">
                            <field name="count_players" string="Players" widget="statinfo" options="{'inline': True}"/>
                        </button>
                    </div>
                    <field name="logo" widget="image" class="oe_avatar" />
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Issue Name"/>
                        </h1>
                    </div>
                    <group>
                        <field name="sport_id" />
                        <field name="count_players" />
                    </group>
                    <notebook>
                        <page name="players" string="Players">
                            <field name="player_ids">
                                <tree editable="bottom">
                                    <field name="name" />
                                    <field name="age" />
                                    <field name="position" />
                                    <field name="starter" widget="boolean_toggle" />
                                    </tree>
                                </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    
    <!-- view kanban -->
    <record id="sport_team_view_kanban" model="ir.ui.view">
        <field name="name">sport.team.view.kanban</field>
        <field name="model">sport.team</field>
        <field name="arch" type="xml">
            <kanban default_group_by="sport_id">
                <field name="name" />
                <field name="logo" />
                <field name="count_players" />
                <field name="color" />
                <templates>
                    <t t-name="kanban-menu">
                        <t t-if="widget.editable"><a role="menuitem" type="edit" class="dropdown-item">Edit</a></t>
                        <t t-if="widget.deletable"><a role="menuitem" type="delete" class="dropdown-item">Delete</a></t>
                        <ul class="oe_kanban_colorpicker" data-field="color"/>
                    </t>
                    <t t-name="kanban-box">
                        <div t-attf-class="#{!selection_mode ? kanban_color(record.color.raw_value) : ''} #{lost_ribbon ? 'oe_kanban_card_ribbon' : ''} oe_kanban_global_click oe_kanban_card d-flex align-items-center">
                        <!-- <div t-attf-class="#{!selection_mode ? kanban_color(record.color.raw_value) : ''} #{lost_ribbon ? 'oe_kanban_card_ribbon' : ''} oe_kanban_global_click oe_kanban_card d-flex flex-column"> -->

                            <div class="oe_kanban_content flex-grow-1">
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title"><field name="name"/></strong>
                                </div>
                                <div class="o_kanban_record_subtitle">
                                        <a>NÂº players: </a>
                                        <field name="count_players"/>
                                </div>
                            </div>
                            <div class="oe_kanban_footer">
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_right">
                                        <field name="logo" widget="image" class="oe_avatar img-fluid" style="object-fit: cover; max-width: 50px; ,max-height: 50px;"/>
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix"/>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>



    <record id="sport_team_action" model="ir.actions.act_window">
        <field name="name">Sport Team</field>
        <field name="res_model">sport.team</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new sport team
            </p>
        </field>
    </record>
</odoo>
