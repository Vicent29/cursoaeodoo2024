<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sport_issue_state" model="ir.ui.view">
        <field name="name">sport.state.issue</field>
        <field name="model">sport.state.issue</field>
        <field name="arch" type="xml">
            <form string="Set state to done">
                <group>
                    <field name="date"/>
                </group>
                <footer>
                    <button string="Set to done" name="change_state_done" class="btn-primary" type="object"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_sport_state_issue" model="ir.actions.act_window">
        <field name="name">Set to done</field>
        <field name="res_model">sport.state.issue</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="sports_association_vicent.model_sport_issue"/>
        <field name="binding_view_types">list,form</field>   
    </record>
</odoo>
